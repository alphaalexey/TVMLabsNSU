Arithmetic {
    Expr = Add

    addOp
        = "+" | "-"

    Add
        = Mul (addOp Mul)*

    mulOp
        = "*" | "/"

    Mul
        = Atom (mulOp Atom)*

    Atom
        = number        -- num
        | variable      -- var
        | "-" Atom      -- unary_minus
        | "(" Expr ")"  -- parens

    variable = (letter | "_") (alnum | "_")*

    nonZeroDigit = "1".."9"

    number
        = "0"                  -- zero
        | nonZeroDigit digit*  -- nz
}
